{
    "extends": ["react-app", "airbnb", "airbnb/hooks", "prettier", "prettier/react"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module",
        "ecmaVersion": 2021
    },
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "plugins": ["jsx-a11y", "prettier", "react", "react-hooks"],
    "rules": {
        "react/require-default-props": ["off", { "ignoreFunctionalComponents": true }],
        "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "no-console": "warn",
        "no-unused-vars": "warn",
        "prettier/prettier": ["error"]
    },
    "globals": {}
}
